<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/iv_circle_new_msj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_circle_24"
        android:visibility="visible"
        android:paddingEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_post_desc"
        app:layout_constraintEnd_toStartOf="@+id/tv_post_desc"
        app:layout_constraintTop_toTopOf="@+id/tv_post_desc" />
    <TextView
        android:id="@+id/tv_post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text=" Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum" />


        <TextView
            android:id="@+id/tv_post_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintStart_toStartOf="@+id/tv_post_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_post_title"
            app:layout_constraintEnd_toEndOf="@+id/tv_post_title"
            tools:text="Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum" />

    <ImageButton
        android:id="@+id/btn_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:src="@drawable/ic_baseline_star_24"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/tv_post_desc"
        app:layout_constraintStart_toEndOf="@+id/tv_post_desc"
        app:layout_constraintTop_toTopOf="@+id/tv_post_desc" />
</androidx.constraintlayout.widget.ConstraintLayout>